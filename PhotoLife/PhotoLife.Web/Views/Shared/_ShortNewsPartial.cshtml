@model PhotoLife.ViewModels.News.ShortNewsViewModel

<div class="well">
    <h2 class="media-heading">
        @Html.ActionLink(Model.Title, "Details", new { controller = "News", id = Model.Id })
    </h2>
    <ul class="list-inline list-unstyled">
        <li><span><i class="glyphicon glyphicon-calendar"></i> @string.Format("{0:D} at {0:HH:mm}", Model.DatePublished)</span></li>
    </ul>
</div>
