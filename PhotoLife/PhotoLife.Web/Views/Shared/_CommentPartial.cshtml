@model PhotoLife.ViewModels.Comment.CommentViewModel

<h4 class="media-heading">
    @if (Model.CanEdit)
    {
        <a class="pull-right glyphicon glyphicon-edit btn-lg edit-comment-button"></a>
    }
    @Html.ActionLink(@Model.User,
        "UserProfile",
        new { controller = "Profile", username = Model.User })

    <small>@string.Format("{0:D} at {0:HH:mm}", Model.Date)</small>
</h4>
<span id="@($"comment{Model.CommentId}")">
    @Html.Raw("<pre>" + Html.Encode(Model.Content) + "</pre>")
</span>

