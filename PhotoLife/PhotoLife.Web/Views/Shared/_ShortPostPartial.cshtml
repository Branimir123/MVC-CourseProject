@model PhotoLife.ViewModels.Post.ShortPostViewModel

<div class="container well">
    <h3 class="media-heading">
        @Html.ActionLink(Model.Title, "Details", new { controller = "Post", id = Model.Id })
    </h3>
    <img src="@Model.ImageUrl" alt="Alternate Text" />
    <ul class="list-inline list-unstyled">
        <li><span><i class="glyphicon glyphicon-calendar"></i> @string.Format("{0:D} at {0:HH:mm}", Model.DatePublished)</span></li>
        <li>|</li>
        <li>
            <span class="glyphicon glyphicon-camera"></span> Votes: @Model.VotesCount
        </li>
        <li>
            <span class="glyphicon glyphicon-comment"></span> Comments: @Model.CommentsCount
        </li>
        <li>
            <span class="glyphicon glyphicon-log-in"></span> @Html.ActionLink("View", "Details", new { controller = "Post", id = Model.Id })
        </li>
        <li>
            <span class="glyphicon glyphicon-user"></span> Author: @Html.ActionLink(Model.Author, "UserProfile", new { controller = "Profile", username = Model.Author })
        </li>

    </ul>
</div>
